<h1>Sign Up</h1>
<hr/>
</br>

<% if flash[:errors] %>
    <li style="color: red;"> <%= flash[:errors] %></li>
<% end %>

<%= form_for @user do | f | %>
<%= f.label :name %>
<%= f.text_field :name %>
</br>
<%= f.label :password %>
<%= f.password_field :password %>
</br>
<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>
</br>
<%= f.submit "Create Account" %>
<% end %>