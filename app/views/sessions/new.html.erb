<h1>Login Page</h1>
<hr/>
</br>

<% if flash[:errors] %>
    <li style="color: red;"> <%= flash[:errors] %></li>
<% end %>

<%= form_for @user, :url => '/login' do | f | %>
<%= f.label :name %>
<%= f.text_field :name %>
</br>
<%= f.label :password %>
<%= f.password_field :password %>
</br>
<%= f.submit "Login" %>
<% end %>